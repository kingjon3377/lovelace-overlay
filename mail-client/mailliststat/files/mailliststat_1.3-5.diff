++	for po in $(POFILES); do \
++	  echo -n "Updating $$po"; \
++	  $(MSGMERGE) -U $$po $(DOMAIN).pot; \
++	done;
++
++install: all
++	@for i in $(MOFILES) ; do \
++	  t=$(LOCALEDIR)/`basename $$i .mo`/LC_MESSAGES ;\
++	  test -d $$t || install -d -m 755 $$t ;\
++	  install -m 644 $$i $$t/$(DOMAIN).mo ;\
++	done
++
++uninstall:
++	for i in $(MOFILES); do \
++	  rm -f $(LOCALEDIR)/`basename $$i .mo`/LC_MESSAGES/$(DOMAIN).mo ;\
