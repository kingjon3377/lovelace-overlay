++
++all: update-po $(MOFILES)
++
++$(DOMAIN).pot: $(POTFILES)
++	$(XGETTEXT) --default-domain=$(DOMAIN) \
++	  --add-comments=TRANSLATORS: $(XGETTEXT_OPTIONS) \
++	  -o $@ $(POTFILES)
++
